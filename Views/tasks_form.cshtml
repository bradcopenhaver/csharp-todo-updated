@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Add a new task</h1>
<form action="/tasks/new" method="post">
  <label for="task-description">Task description:</label>
  <input id="task-description" name="task-description" type="text" required>
  <label>Due Date:</label>
  <input name="dueMonth" type="number" placeholder="MM" min="1" max="12" required>/
  <input type="number" name="dueDay" placeholder="DD" min="1" max="31" required>/
  <input type="number" name="dueYear" value="2016" min="2016" max="5555" required>
  <select name="category-id">
    @foreach (var category in Model)
    {
      <option value="@category.GetId()">@category.GetName()</option>
    }
  </select>
  <button class="btn btn-success" type="submit">Add new task</button>
</form>
<p><a class="btn btn-default" href="/">Back home</a></p>
<p><a class="btn btn-primary" href="/tasks">View all tasks</a></p>
