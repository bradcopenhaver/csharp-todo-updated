@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Add a new task</h1>
<form action="/tasks/new" method="post">
  <label for="task-description">Task description:</label>
  <input id="task-description" name="task-description" type="text">
  <label for="task-due-date">Task Due Date</label>
  <input type="number" name="month" placeholder="mm" min="1" max="12">
  /
  <input type="number" name="day" placeholder="dd" min="1" max="31">
  /
  <input type="number" name="year" placeholder="yyyy" min="1" max="4000">
  <select name="category-id">
    @foreach (var category in Model)
    {
      <option value="@category.GetId()">@category.GetName()</option>
    }
  </select>
  <button class="btn btn-success" type="submit">Add new task</button>
</form>
<p><a class="btn btn-default" href="/">Back home</a></p>
<p><a class="btn btn-primary" href="/tasks">View all tasks</a></p>
